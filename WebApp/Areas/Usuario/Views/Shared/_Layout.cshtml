<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>CriptoStorm</title>
    <link href="~/Images/icons/Icon.ico" rel="shortcut icon" type="image/x-icon" />
    <link rel="stylesheet" href="~/Scripts/Css/fontawesome/css/all.css" />
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v1.0.0/css/unicons.css" />
    <link href="~/Scripts/Css/Glyphicon/bootstrap-glyphicons.min.css" rel="stylesheet" />
    <link href="~/Scripts/Bundle/Layout.css" rel="stylesheet" />
    <script src="~/Scripts/Bundle/Layout.js" type="text/javascript"></script>
</head>
<body>
    @if (User.Identity.IsAuthenticated && User.IsInRole("Users"))
    {
        <nav class="navbar fixed-top navbar-expand-lg">
            <div class="div-navbar">
                <ul class="navbar-nav">
                    <li class="nav-item"> <img class="img-logo-dashboard d-inline" src="~/Images/svg/Logo.svg" width="40" height="40" /></li>
                    <li class="nav-item"> <a class="navbar-link" href="@Url.Action("Index", "Dashboard")">DashBoard</a></li>
                    <li class="nav-item"> <a class="navbar-link" href="@Url.Action("Index", "comprarbnb")">BNB</a></li>
                    <li class="nav-item"> <a class="navbar-link" href="@Url.Action("Limites", "Dashboard")">Carteira de Moedas</a></li>
                    <li class="nav-item"> <a class="navbar-link" href="@Url.Action("Index", "Pagamentos")">Pagamentos</a></li>
                    <li class="nav-item dropdown">
                        <a class="navbar-link dropdown-toggle" dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Relatorios</a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" href="@Url.Action("Individual", "Relatorios")">Individual</a>
                            <a class="dropdown-item" href="@Url.Action("Geral", "Relatorios")">Geral</a>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="meu-navbar-right">
                <div class="display-limits">
                    <p> Limite BTC disponivel:</p>
                    <p id="display-btc-value"> <i class='uil uil-bitcoin'></i> @(ViewBag.BTC != null ? string.Format("{0:N8}", ViewBag.BTC) : "Configure API")</p>
                    <p id="display-brl-value">R$ </p>
                </div>
                <div class="div-user-menu">
                    <div class="dropdown">
                        <div class="mytogledropdown" data-toggle="dropdown">
                            <span class="glyphicon glyphicon-user"></span>
                            <p class="username">@ViewBag.username</p>
                        </div>
                        <div class="dropdown-user dropdown-menu dropdown-menu-right">
                            <div class="expira-em">
                                <p>Expira em:</p>
                                <p>@ViewBag.datavencimento</p>
                            </div>
                            <div>
                                <p>
                                    <a class="deslogar" href="@Url.Action("setkeys","Binance")">Alterar Api Binance</a>
                                </p>
                                <p>
                                    <a class="deslogar" href="@Url.Action("index","AlterarSenha")">Alterar Senha</a>
                                </p>
                                <p>
                                    <a class="deslogar" href="@Url.Action("Logoff","Login")">Sair</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    }

    <div class="container-fluid body-content">
        @RenderBody()
    </div>
    @*@RenderSection("scripts", required: false)*@
</body>
</html>