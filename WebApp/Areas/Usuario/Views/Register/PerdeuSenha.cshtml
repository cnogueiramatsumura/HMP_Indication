@{
    Layout = "~/Areas/Usuario/Views/Shared/_layoutSemMenu.cshtml";
}

<link href="~/Scripts/Css/Login.css" rel="stylesheet" />
<div class="main-wrapper">
    <div class="wrapper">
        <div class="image-logo">
            <img src="~/Images/svg/Logo.svg" width="110" height="110" />
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

            <div class="form-wrapper">
                @Html.Label("email", htmlAttributes: new { @class = "control-label" })
                @Html.Editor("email", new { htmlAttributes = new { @class = "form-control" } })
            </div>
                      
            <div class="form-wrapper">
                <input type="submit" value="Recuperar Senha" class="doingbtn" />             
            </div>
        }
    </div>
</div>