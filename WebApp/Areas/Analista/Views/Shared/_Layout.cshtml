<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CriptoStorm</title>
    <link href="~/Images/icons/Icon.ico" rel="shortcut icon" type="image/x-icon" />
    <link rel="stylesheet" href="~/Scripts/Css/fontawesome/css/all.css" />
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v1.0.0/css/unicons.css">
    <link href="~/Scripts/Css/Glyphicon/bootstrap-glyphicons.min.css" rel="stylesheet" />
    <link href="~/Scripts/Bundle/Layout.css" rel="stylesheet" />
    <script src="~/Scripts/Bundle/Layout.js" type="text/javascript"></script>
</head>
<body>
    @if (User.Identity.IsAuthenticated && User.IsInRole("Analista"))
    {
        <nav class="navbar fixed-top navbar-expand-lg">
            <div class="div-navbar">
                <ul class="navbar-nav">
                    <li class="nav-item"><img class="img-logo-dashboard d-inline" src="~/Images/svg/Logo.svg" width="40" height="40" /></li>
                    <li class="nav-item"><a class="navbar-link" href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                    <li class="nav-item"><a class="navbar-link" href="@Url.Action("Index", "Chamada")">Criar Chamada</a></li>
                    <li class="nav-item"><a class="navbar-link" href="@Url.Action("Abertas", "Chamada")">Chamadas Abertas</a></li>
                    <li class="nav-item"><a class="navbar-link" href="@Url.Action("Geral", "Relatorios")">Relatorio</a></li>
                    <li class="nav-item dropdown">
                        <a class="navbar-link dropdown-toggle" dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Config</a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" href="@Url.Action("SMTP", "Configuracoes")">SMTP</a>
                            <a class="dropdown-item" href="@Url.Action("Licenca", "Configuracoes")">Licença</a>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="meu-navbar-right">
                <div class="div-user-menu">
                    <div class="dropdown">
                        <div class="mytogledropdown" data-toggle="dropdown">
                            <span class="glyphicon glyphicon-user"></span>
                            <p class="username">@HttpContext.Current.User.Identity.Name</p>
                        </div>
                        <div class="dropdown-user dropdown-menu">
                            <div>
                                <p>
                                    <a class="deslogar" href="@Url.Action("index","AlterarSenha", new {area = "Analista" })">Alterar Senha</a>
                                </p>
                                <p>
                                    <a class="deslogar" href="@Url.Action("Logoff","Login")">Sair</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    }

    <div class="container body-content">
        @RenderBody()
    </div>

</body>
</html>